# g: |T <: Ord and Eq and Show| T -> T
g x =
    _ = x <= x
    _ = x == x
    _ = x.__str__()
    x

g 1 # OK
g None # ERR

h x, y =
    _ = x == y
    _ = x - y
    x + y

_ = h -1, -2 # OK
_ = h 1, 2 # OK
_ = h "a", "b" # ERR

