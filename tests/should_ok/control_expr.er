i = if
i! = if!
f! = for!
w! = while!

cond = True
s = i cond:
    do "then block"
    do "else block"
assert s == "then block"

i! cond:
    do!:
        print! "then block!"
    do!:
        print! "else block!"

f! 0..<10, i =>
    print! "i = {i}"

counter = !10
print! counter
w! do!(not(counter == 0)), do!:
    print! "counter = {counter}"
    counter.update!(i -> i - 1)
